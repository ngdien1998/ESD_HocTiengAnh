
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container">

    <div class="content" style="text-align: center; margin-top:64px;">
        <div class="row">
            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                <form asp-action="Login" method="post">
                    <h1 class="mb-4 display-4">Đăng nhập</h1>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control" style="padding:1.5rem;" name="username" placeholder="Username">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <input type="password" class="form-control" style="padding:1.5rem;" name="password" placeholder="Password">
                        </div>
                    </div>

                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-success btn-lg">Đăng nhập</button>
                    </span>

                    <div class="sign-in-social">
                        <button class="btn btn-primary mt-5 btn-lg" style="width:100%">Đăng nhập bằng Facebook</button>
                        <button class="btn btn-danger mt-1 btn-lg" style="width:100%">Đăng nhập bằng Google</button>
                    </div>
                </form>
            </div>
            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
                <img style="width:70%;margin-top:40px;" src="~/images/login-icon.png" />
            </div>
        </div>
    </div>
</div>